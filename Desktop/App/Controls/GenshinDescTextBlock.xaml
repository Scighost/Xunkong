<UserControl x:Class="Xunkong.Desktop.Controls.GenshinDescTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Xunkong.Desktop.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <TextBlock x:Name="ThisTextBlock"
               HorizontalAlignment="Left"
               FontFamily="{x:Bind FontFamily}"
               FontSize="{x:Bind FontSize}"
               FontWeight="{x:Bind FontWeight}"
               Foreground="{x:Bind Foreground}"
               IsTextSelectionEnabled="True"
               TextWrapping="Wrap" />

</UserControl>
